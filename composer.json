{
    "name": "esign/laravel-test-mail",
    "description": "Send test emails to verify your mail setup in Laravel.",
    "keywords": [
        "esign",
        "test-mail"
    ],
    "homepage": "https://github.com/esign/laravel-test-mail",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Jordy Van der Haegen",
            "email": "jordy@esign.eu",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/support": "^10.0|^11.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.5",
        "orchestra/testbench": "^8.0|^9.0",
        "phpunit/phpunit": "^10.1"
    },
    "autoload": {
        "psr-4": {
            "Esign\\TestMail\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Esign\\TestMail\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "phpcs": "vendor/bin/php-cs-fixer fix"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Esign\\TestMail\\TestMailServiceProvider"
            ],
            "aliases": {
                "TestMail": "Esign\\TestMail\\Facades\\TestMailFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
